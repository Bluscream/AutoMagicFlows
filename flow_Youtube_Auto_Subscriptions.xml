<?xml version='1.0' encoding='UTF-8' standalone='yes' ?>
<data version="1.34.0">
  <trigger type="app_task_started">
    <useDefaultName>false</useDefaultName>
    <name>Youtube started</name>
    <enabled>false</enabled>
    <method>USAGE_STATISTICS</method>
    <packageNameFilter>com.google.android.ogyoutube,com.google.android.youtube,com.google.android.apps.youtube.gaming</packageNameFilter>
  </trigger>
  <action type="control_user_interface">
    <useDefaultName>false</useDefaultName>
    <name>Click on "Subscriptions"/"Channels"</name>
    <script>if (containsElement(newList("com.google.android.ogyoutube", "com.google.android.youtube"), package_name) ){ click("Subscriptions") }
else if (package_name == "com.google.android.apps.youtube.gaming"){
  if ( getText() == "Channels"){ return }
  sleep(5000);
  click("Channels");
  //sleep(5000);
  //scrollForwardById("com.google.android.apps.youtube.gaming:id/video_card_view");
}</script>
  </action>
  <flow type="flow">
    <name>Youtube Auto Subscriptions</name>
    <group>YouTube</group>
    <enabled>false</enabled>
    <executionPolicy>PARALLEL</executionPolicy>
    <triggercontainer id="t1" x="35.0" y="52.5">
      <trigger>Youtube started</trigger>
    </triggercontainer>
    <actioncontainer id="t2" x="35.0" y="227.5">Click on "Subscriptions"/"Channels"</actioncontainer>
    <connection from="t1" to="t2" type="NORMAL" sourcePosition="SOUTH" targetPosition="NORTH" />
  </flow>
</data>